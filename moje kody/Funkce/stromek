#include <stdio.h>

void vykresliStromecek(int vyska) {
    for (int i = 1; i <= vyska; i++) {
        for (int j = 1; j <= vyska - i; j++) {
            printf(" ");
        }
        
        for (int j = 1; j <= 2 * i - 1; j++) {
            printf("*");
        }
        
        printf("\n");
    }
}


void vykresliStojan(int vyska, int sirkaStromecku) {
    int mezera = (sirkaStromecku - 3) / 2;

    for (int i = 0; i < vyska; i++) {
        for (int j = 0; j < mezera; j++) {
            printf(" ");
        }

        printf("***\n");
    }
}

void stromecek(int vyska) {
    vykresliStromecek(vyska);
    
    int sirkaStromecku = 2 * vyska - 1;
    
   
    vykresliStojan(3, sirkaStromecku);  
}

int main() {
    int vyska;

    printf("Zadejte výšku stromečku: ");
    scanf("%d", &vyska);

    stromecek(vyska);

    return 0;
}
