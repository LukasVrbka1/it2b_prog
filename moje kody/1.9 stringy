#include <stdio.h>
#include <string.h>
int main() {
    char slovo[100];
    
    
    printf("Zadej slovo: ");
    scanf("%s", slovo);
    int delka =strlen(slovo);

    for (int i = 0; i < delka ;i+=2) {
        slovo[i] = '*';
    }
    
    printf("VÃ½sledek: %s\n", slovo);
    
    return 0;
}
