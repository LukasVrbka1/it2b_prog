#include <stdio.h>
#include <stdlib.h>
#include <time.h>


int hodKostkou(int steny) {
    return rand() % steny + 1;  
}

int main() {
    int pocetKostek, pocetSten;
    
   
    srand(time(NULL));
    
   
    printf("Zadejte pocet kostek: ");
    scanf("%d", &pocetKostek);
    
    printf("Zadejte pocet sten kostky: ");
    scanf("%d", &pocetSten);
    
   
    if (pocetSten < 2) {
        printf("Pocet sten kostky musi byt alespon 2.\n");
        return 1;
    }
    
    int soucet = 0;
    printf("Vysledky hodu:\n");
    
  
    for (int i = 1; i <= pocetKostek; i++) {
        int vysledek = hodKostkou(pocetSten);
        printf("Kostka %d: %d\n", i, vysledek);
        soucet += vysledek;
    }
    
    
    printf("Soucet vsech hodu: %d\n", soucet);
    
    return 0;
}
